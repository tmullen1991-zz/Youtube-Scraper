<div class="row">
    {{#each video}}
    <div class="col s12 m6 l3">
        <div class="card">
            <div class="card-image">
                <img src="https://img.youtube.com/vi/{{this.youtubeID}}/maxresdefault.jpg">
            </div>
            <div class="card-content">
                <h6>{{this.title}}</h6>
            </div>
            <div class="card-action">
                <a href="https://www.youtube.com{{this.url}}" class="blue-text">Link to Video</a>
                <a href="#playlist-addsong-modal" value="{{this._id}}"
                    class="black-text playlist modal-trigger add-playlist">Playlists</a>
            </div>
        </div>
    </div>
    {{/each}}
    <div id="playlist-addsong-modal" class="modal">
        <div class="modal-content">
            <h4>Playlist List</h4>
            <ul class="playlist-list">
                {{#each playlists}}
                <li><a href="/playlist/{{this._id}}" value="{{this._id}}" class="playlist">{{this.name}}</a></li>
                {{/each}}
            </ul>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
        </div>
    </div>
</div>

<script src="js/app.js"></script>